<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render partial: "post", locals: { post: post } %>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate(@posts) %>
<% if user_signed_in? %>
   <%= link_to 'New Post', new_post_path %>
<% end %>
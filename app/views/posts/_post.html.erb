<tr>
<td><%= post.title %></td>
<td><%= post.text %></td>
<td><%= post.image %></td>
<td><%= link_to 'Show', post %></td>

<% if user_signed_in? && current_user.id == post.user_id %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
<% end %>
</tr>
